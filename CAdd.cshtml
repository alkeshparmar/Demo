@model TestMVC.Models.Category
@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    @Html.LabelFor(m => m.cname, new { @class = "control-label"})
    @Html.TextBoxFor(m => m.cname, new { @class = "form-control" })

    @Html.LabelFor(m => m.cdescription, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.cdescription, new { @class = "form-control" })

    <input type="submit" name="Submit" value="Submit" class="btn btn-outline-primary" />
}

@if (ViewBag.Message != null)
{

    <script>
    window.alert('@ViewBag.Message');
    window.location.href = "@Url.Action("Index","Category")";
    </script>
}