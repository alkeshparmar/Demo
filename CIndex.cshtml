@model  IEnumerable<TestMVC.Models.Category>
@{
    ViewBag.Title = "Index";
}


<table class="display table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <td>Category Name</td>
            <td>Category Description</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.cname</td>
                <td>@item.cdescription</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = item.cid })" data-toggle="tooltip" data-placement="top">Edit</a>                  
                </td>
                <td>
                    @*@using (Html.BeginForm("Delete", "Category", new { id = item.cid }))
                    {
                        <input type="submit" value="Delete" />
                    }*@
                    <a href="@Url.Action("Delete", "Category", new { id = item.cid })" data-toggle="tooltip" data-placement="top">Delete</a>  
                </td>
            </tr>
        }
    </tbody>
</table>
