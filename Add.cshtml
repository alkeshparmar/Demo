@model TestMVC.Models.Product
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>
@using (Html.BeginForm("Add", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.LabelFor(m =>m.cid, new { @class = "control-label" })
    @Html.DropDownListFor(m => m.cid, (SelectList)ViewBag.cname, "Select", new { @class = "form-control" })

    @Html.LabelFor(m => m.images, new { @class = "control-label"})
    @Html.EditorFor(m => m.images, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
    @*<input type="file" id="file" name="file" />*@
    @*@Html.TextBox("file", "", new { type = "file" })*@

    @Html.LabelFor(m => m.pname, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.pname, new { @class = "form-control" })

    @Html.LabelFor(m => m.pprice, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.pprice, new { @class = "form-control" })

    @Html.LabelFor(m => m.Quantity, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })

    @Html.LabelFor(m => m.pdescription, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.pdescription, new { @class = "form-control" })

    <input type="submit" name="Submit" value="Submit" class="btn btn-outline-primary" />

}

@if (ViewBag.Message != null)
{

    <script>
    window.alert('@ViewBag.Message');
    window.location.href = "@Url.Action("Index","Product")";
    </script>
}
